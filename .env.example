# === Duckstack Environment Variables ===
# Copy to .env and modify as needed: cp .env.example .env

# PostgreSQL catalog connection
DATABASE_URL=postgresql://duckstack:duckstack@postgres:5432/duckstack

# Data directory (path inside the container)
DATA_DIR=/app/data

# AWS S3 credentials (optional, for querying remote parquet files)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1

# REST API credentials (referenced by auth_env_var in api_sources)
POLYGON_API_KEY=your_key_here

# PostgreSQL container settings
POSTGRES_USER=duckstack
POSTGRES_PASSWORD=duckstack
POSTGRES_DB=duckstack
